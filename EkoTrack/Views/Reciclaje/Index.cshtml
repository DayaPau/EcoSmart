@model IEnumerable<EkoTrack.Models.RecyclingRecord>
@{
    ViewData["Title"] = "Mis reciclajes";
}
<div class="container mt-4">
    <h3>♻️ Mis reciclajes</h3>

    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success">@TempData["msg"]</div>
    }

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-3">
            <input name="material" class="form-control" placeholder="Buscar material..." value="@Context.Request.Query["material"]" />
        </div>
        <div class="col-md-3">
            <input type="date" name="desde" class="form-control" value="@Context.Request.Query["desde"]" />
        </div>
        <div class="col-md-3">
            <input type="date" name="hasta" class="form-control" value="@Context.Request.Query["hasta"]" />
        </div>
        <div class="col-md-3">
            <button class="btn btn-outline-secondary w-100">Filtrar</button>
        </div>
    </form>

    <div class="d-flex justify-content-between align-items-center mb-2">
        <div><b>Total:</b> @String.Format("{0:0.###}", ViewBag.TotalKg) kg</div>
        <a class="btn btn-success" asp-action="Create">+ Registrar reciclaje</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Material</th>
                    <th class="text-end">Cantidad</th>
                    <th>Notas</th>
                    <th style="width:160px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.Fecha.ToString("yyyy-MM-dd")</td>
                        <td>@r.Material?.Nombre</td>
                        <td class="text-end">@r.Cantidad</td>
                        <td>@r.Notas</td>
                        <td>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@r.Id">Editar</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@r.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
